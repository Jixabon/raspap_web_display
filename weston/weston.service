[Unit]
Description=Kiosk
After=multi-user.target
After=graphical.target

[Service]
User=pi
Environment=XDG_RUNTIME_DIR=/run/user/1000
TTYPath=/dev/tty1
ExecStart=/usr/bin/weston --log=/home/pi/weston.log -c /home/pi/raspap_web_display/weston/weston-kiosk.ini
Restart=always
RestartSec=5

[Install]
WantedBy=graphical.target